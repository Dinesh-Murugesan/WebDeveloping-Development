<%- include('partials/header') %>
<div class="container">
    <header class="jumbotron" style="opacity: 0.5;">
        <div class="container">
            <h1>Movie Time</h1>
            <p>Lets Movie now and party after!</p>
            <p>
                <a class="btn btn-large btn-primary" href="/movies/newmovies">Add a Movie</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% movies.forEach((movie) => { %>
            <div class="col-md-3 col-sm-6">
                <div>
                        <img class="img-thumbnail" src="<%= movie.image %>" alt="<%= movie.name %>">
                </div>
                <div class="caption">
                        <h4><%= movie.name %></h4>
                        <a href="/movies/<%= movie._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include('partials/footer') %>